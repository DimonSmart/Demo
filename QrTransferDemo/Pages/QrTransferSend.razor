@page "/qr-transfer/send"

<PageTitle>QR transfer - send</PageTitle>

<div class="alert alert-warning" role="alert">
    <strong>Attention.</strong> This demonstration page is intended solely to explore the theoretical possibility of
    transferring data via QR codes and must not be used for unauthorized access to information.
</div>

<div class="d-flex flex-wrap justify-content-between align-items-center gap-2 mb-3">
    <div class="btn-group" role="group" aria-label="QR transfer navigation">
        <a class="btn btn-primary" href="/qr-transfer/send">Send</a>
        <a class="btn btn-outline-primary" href="/qr-transfer/receive">Receive</a>
    </div>
    <a class="btn btn-outline-secondary" href="/qr-transfer/protocol" target="_blank" rel="noopener">
        How it works?
    </a>
</div>

<QrTransferSenderTab />

@inject IPageTitleService PageTitleService

@code {
    protected override void OnInitialized()
    {
        PageTitleService.SetTitle("QR transfer - send");
    }
}
