@page "/qr-transfer"

<PageTitle>QR transfer</PageTitle>

<h1 class="mb-4">QR transfer</h1>

<ul class="nav nav-tabs" id="qrTransferTabs" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="sender-tab" data-bs-toggle="tab" data-bs-target="#sender" type="button" role="tab"
                aria-controls="sender" aria-selected="true">Sender</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="receiver-tab" data-bs-toggle="tab" data-bs-target="#receiver" type="button" role="tab"
                aria-controls="receiver" aria-selected="false">Receiver</button>
    </li>
</ul>
<div class="tab-content mt-3" id="qrTransferTabContent">
    <div class="tab-pane fade show active" id="sender" role="tabpanel" aria-labelledby="sender-tab">
        <QrTransferSenderTab />
    </div>
    <div class="tab-pane fade" id="receiver" role="tabpanel" aria-labelledby="receiver-tab">
        <QrTransferReceiverTab />
    </div>
</div>
