@using Demo.Demos.BJ

<div class="controls-container">
    <button @onclick="() => Game.Hit()" class="casino-button" disabled="@(!Game.CanHit())">Hit</button>
    <button @onclick="() => Game.Stand()" class="casino-button" disabled="@(!Game.CanStand())">Stand</button>
    <button @onclick="() => Game.DoubleDown()" class="casino-button" disabled="@(!Game.CanDoubleDown())">Double Down</button>
    <button @onclick="() => Game.Split()" class="casino-button" disabled="@(!Game.CanSplit())">Split</button>
    <button @onclick="() => Game.Surrender()" class="casino-button" disabled="@(!Game.CanSurrender())">Surrender</button>
</div>

@code {
    [Parameter] public required BlackjackGameBase Game { get; set; }
}