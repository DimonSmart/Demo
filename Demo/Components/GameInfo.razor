@using Demo.Demos.BJ

<div class="game-info-container">
    <div class="info-item">
        <span class="info-label">Player Money:</span>
        <span class="info-value">@($"{Game.PlayerMoney:C}")</span>
    </div>
    <div class="info-item">
        <span class="info-label">Games Played:</span>
        <span class="info-value">@Game.GamesPlayedInShoe</span>
    </div>
    <div class="info-item">
        <span class="info-label">Game Status:</span>
        <span class="badge @(Game.GameFinished ? "badge-finished" : "badge-inactive")">
            @(Game.GameFinished  ? "Game Finished" : "In Progress")
        </span>
    </div>
    <div class="info-item">
        <span class="info-label">Shoe Status:</span>
        <span class="badge @(Game.Shoe.IsRedCardRaised ? "badge-raised" : "badge-inactive")">
            @(Game.Shoe.IsRedCardRaised ? "Red Card Raised" : "Normal")
        </span>
    </div>
</div>

@code {
    [Parameter] public required BlackjackGameBase Game { get; set; }
}