<style>
    :root {
        --gap-size: 20px;
    }

    .card {
        flex: 1 1 calc(33.333% - var(--gap-size));
        display: flex;
        flex-direction: column;
        min-width: 200px;
        max-width: 400px;
        border: 1px solid green;
        padding: 20px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
        border-radius: 8px;
        overflow: hidden;
        box-sizing: border-box;
        flex-grow: 1;
    }

        .card img {
            max-width: 100%;
            height: auto;
            display: block;
            object-fit: cover;
        }

    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: left;
        gap: var(--gap-size);
    }
</style>

